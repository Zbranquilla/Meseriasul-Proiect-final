@page
@model Meseriasul1.Pages.Servicii.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Creeaza</h1>

<h4>Serviciu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Serviciu.NumeServiciu" class="control-label"></label>
                <input asp-for="Serviciu.NumeServiciu" class="form-control" />
                <span asp-validation-for="Serviciu.NumeServiciu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.Pret" class="control-label"></label>
                <input asp-for="Serviciu.Pret" class="form-control" />
                <span asp-validation-for="Serviciu.Pret" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label asp-for="Serviciu.ProgramareID" class="control-label">Ora programare</label> 
                <select asp-for="Serviciu.ProgramareID" class="form-control" asp-items="ViewBag.ProgramareID"> </select> 
                <span asp-validation-for="Serviciu.ProgramareID" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <input type="submit" value="Creeaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
